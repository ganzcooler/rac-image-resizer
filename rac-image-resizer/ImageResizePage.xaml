<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rac_image_resizer.ImageResizePage"
             Title="ImageResizePage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label Text="Bild komprimieren"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />

            <Image x:Name="selectedImage"
                   HorizontalOptions="Center"
                   VerticalOptions="Fill" />

            <Label Text="Auflösung" />
            <Slider x:Name="sld_size"
                    HorizontalOptions="Fill"
                    Minimum="0"
                    Maximum="100"
                    Value="40" />

            <Label Text="Qualität" />
            <Slider x:Name="sld_quality"
                    HorizontalOptions="Fill"
                    Minimum="0"
                    Maximum="1"
                    Value="0.85" />

            <Button Text="Bild speichern"
                    HorizontalOptions="Fill"
                    Clicked="BtnSaveImage" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>